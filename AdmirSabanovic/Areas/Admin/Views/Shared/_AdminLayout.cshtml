@if (!Request.IsAuthenticated) {
    Response.Redirect("Login");
}
@{var USER = ViewBag.User as AdmirSabanovic.Areas.Admin.Models.Admin;}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Content/admin/plugins/pace-1.0.2/pace.js"></script>
    <link href="~/Content/admin/plugins/pace-1.0.2/themes/red/pace-theme-corner-indicator.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_Head.cshtml")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("body_styles", false)
</head>
<body class="skin-blue sidebar-mini">
    <div class="wrapper">
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_Header.cshtml")
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_Sidebar.cshtml")
    @RenderBody()

    </div><!-- ./wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_Footer.cshtml")
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_ControlSidebar.cshtml")
    @Html.Partial("~/Areas/Admin/Views/Shared/Partials/_Scripts.cshtml")
    @RenderSection("body_scripts", false)
</body>
</html>
